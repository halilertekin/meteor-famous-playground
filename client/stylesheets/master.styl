  font-weight: 300
  color: flatui-midnightblue
  -webkit-user-select: none
  line-height: 1.5em
  
  .container
    padding: 0.75em
  
  p
    margin: 1.5em 0
  
  ul
    padding: 0
    margin: 0
    list-style-type: none
    
  a
    color: flatui-belizehole

