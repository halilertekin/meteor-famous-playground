// nib for CSS autoprefixing. http://visionmedia.github.io/nib/
@import 'nib'

body
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size: 24px
  font-weight: 300
  color: flatui-midnightblue
  -webkit-user-select: none
  line-height: 1.5em
  
  .container
    width: 100%
    height: 100%
    padding: 1.5em 0.75em
    overflow: auto
    
    max-width: 800px
    margin: 0 auto
    
    &, *
      box-sizing: border-box
  
  h3
    font-size: 1em
    margin: 0
    font-weight: 400
  
  li h3 + p
    margin-top: 0
  
  p
    margin: 1.5em 0
  
  ul
    padding: 0
    margin: 0
    list-style-type: none
    
  a
    color: flatui-belizehole
    text-decoration: none

.famous-surface
  cursor: pointer

.primary-bg
  background: flatui-midnightblue
  color: flatui-clouds

.secondary-bg
  background: flatui-clouds

.success-bg
  background: flatui-nephritis
  color: flatui-clouds
